{#
/**
 * @file
 * Theme override to display a single Drupal page while offline.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_maintenance_page()
 */
#}

<div class="layout-content maintenance-page-content">
  <div class="maintenance-page-text">
    <div class="maintenance-page-interior">
      <header role="banner">
        {% include (base_path ~ directory ~ '/templates/components/logo.html.twig') %}
      </header>
      <main role="main">
        <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
        <div class="maintenance-page-summary">

          <p>
            {% trans %}
            The Public Health Learning Navigator is coming soon! Come back to find a curated selection of eLearning opportunities that have been reviewed for content, user experience, and relevance.
            {% endtrans %}
          </p>
        </div>

        <p class="maintenance-page-subtitle">{{ 'Coming May 2018'|t }}</p>

        {# Begin MailChimp Signup Form. Slightly altered to add classes and trans #}
        <div id="mc_embed_signup" class="maintenance-page-signup-form">
          <form action="https://nnphi.us11.list-manage.com/subscribe/post?u=239198fe40d064f8b332c8c13&amp;id=ccdb314697" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">

              <div class="mc-field-group">
                <label class="visually-hidden" for="mce-EMAIL">{% trans %}Email Address{% endtrans %}</label>
                <input type="email" value="" placeholder="{{ 'Your email address'|t }}"  name="EMAIL" class="required email" id="mce-EMAIL">
              </div>
              <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
              </div>    {# real people should not fill this in and expect good things - do not remove this or risk form bot signups #}
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_239198fe40d064f8b332c8c13_ccdb314697" tabindex="-1" value=""></div>
              <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
            </div>
          </form>
        </div>

        {# End mc_embed_signup #}


      </main>
    </div>
    <footer class="maintenance-page-footer">
      <a href="https://nnphi.org/phln/">
        <img src="{{ base_path ~ directory ~ '/images/phln-logo.png' }}" alt="{{ 'Public Health Learning Network Logo'|t }}" />
      </a>
      <a href="https://nnphi.org/">
        <img src="{{ base_path ~ directory ~ '/images/nnphi-logo.svg' }}" alt="{{ 'National Network of Public Health Institutes Logo'|t }}" />
      </a>
    </footer>
  </div>
</div>