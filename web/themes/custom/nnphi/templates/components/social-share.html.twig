{% set encoded_label = node.label()|e|url_encode %}

<div class="social-share-links-wrapper">
    <h2 class="social-share-links-label">{{ 'Share This Training'|t }}</h2>
  <ul class="social-share-links">
    <li>
      <a rel="nofollow" href="mailto:?subject={{ content.email_subject }}&body={{ content.email_body }}" target="_blank">
        {% include base_path ~ directory ~ '/svg/envelope.svg' %}
        <span>{% trans %}Email{% endtrans %}</span>
      </a>
    </li>
    <li class="share-facebook">
      <a rel="nofollow" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{content.abs_url}}">
        {% include base_path ~ directory ~ '/svg/facebook.svg' %}
        <span>{% trans %}Facebook{% endtrans %}</span>
      </a>
    </li>
    <li class="share-twitter">
      <a rel="nofollow" href="https://twitter.com/share?text={{ encoded_label }}&url={{content.abs_url}}" target="_blank" label="{{  'Click to share on Twitter'|t}}">
        {% include base_path ~ directory ~ '/svg/twitter.svg' %}
        <span>{% trans %}Twitter{% endtrans %}</span>
      </a>
    </li>
    <li class="share-linkedin">
      <a rel="nofollow" href="https://www.linkedin.com/shareArticle?mini=true&url={{content.abs_url}}" target="_blank">
        {% include base_path ~ directory ~ '/svg/linkedin.svg' %}
        <span>{% trans %}LinkedIn{% endtrans %}</span>
      </a>
    </li>
  </ul>
</div>